<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShebinBook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.NavigationView">
        <item name="fontFamily">@font/tajawal_medium</item>
        <item name="android:background">#001324</item>
        <item name="android:icon">@drawable/home2</item>

    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
    <item name="colorControlNormal">@color/white</item>
    <item name="colorControlActivated">#DFDA13</item>
</style>
    <style name="RatingBar2" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/purple_500</item>
        <item name="colorControlActivated">#DFDA13</item>
    </style>
</resources>