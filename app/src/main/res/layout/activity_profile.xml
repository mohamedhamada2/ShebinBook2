<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="profileviewmodel"
            type="com.alatheer.shebinbook.trader.profile.ProfileViewModel" />
    </data>
    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".trader.profile.ProfileActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".home.HomeActivity"
            android:background="@color/purple_500"
            android:orientation="vertical"
            android:gravity="right">
            <RelativeLayout
                android:id="@+id/relative_ly"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/purple_500"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="@dimen/_5sdp">
                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/menu"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:onClick="showmenu"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_img"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_toLeftOf="@+id/menu"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_12sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/user_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:background="@drawable/img_bg"
                            android:src="@drawable/ic_male"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mohamed"
                    android:layout_toLeftOf="@id/card_img"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:fontFamily="@font/tajawal_medium"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/white"/>
                <ImageView
                    android:id="@+id/img_send"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/send"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/search"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/img_send"/>
            </RelativeLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/store_logo"
                            android:layout_width="@dimen/_36sdp"
                            android:layout_height="@dimen/_36sdp"
                            app:riv_corner_radius="@dimen/_2sdp"
                            android:background="@drawable/logo"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitXY"/>
                        <TextView
                            android:id="@+id/store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_ask_user"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/tajawal_medium"
                            android:layout_toLeftOf="@+id/store_logo"
                            android:layout_centerVertical="true"
                            android:paddingRight="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:textColor="@color/purple_500"
                            android:layout_toRightOf="@+id/fav_img"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center"/>
                        <RatingBar
                            android:id="@+id/constraint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:numStars="6"
                            android:stepSize="0.2"
                            android:progressTint="#DFDA13"
                            android:theme="@style/RatingBar"
                            android:padding="@dimen/_5sdp"
                            style="?android:attr/ratingBarStyleSmall"
                            android:isIndicator="true"
                            android:rating="5.2">
                        </RatingBar>
                        <ImageView
                            android:id="@+id/fav_img"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:background="@drawable/fav3"
                            android:layout_toRightOf="@+id/constraint"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5sdp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="لدينا افضل الخامات بأفضل الأسعار والعروض"
                            android:layout_gravity="right"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/tajawal_medium"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_toRightOf="@+id/edit_img"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_10sdp"/>
                        <ImageView
                            android:id="@+id/edit_img"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/edit3"
                            android:layout_toRightOf="@+id/btn_add_offer" />
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_add_offer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/tajawal_bold"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/purple_500"
                            android:text="إضافة عرض"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/btn_bg"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingLeft="@dimen/_10sdp"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="#001C36"
                        android:layout_marginTop="@dimen/_5sdp"/>
                    <pl.pzienowicz.autoscrollviewpager.AutoScrollViewPager
                        android:id="@+id/viewpager2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:overScrollMode="never"
                        android:clipToPadding="false"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/store_details_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_2sdp"
                        android:gravity="right"
                        android:layoutDirection="rtl"/>
                    <FrameLayout
                        android:id="@+id/fragment_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            app:headerLayout="@layout/header"
            android:theme="@style/Widget.BottomNavigationView">
        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
