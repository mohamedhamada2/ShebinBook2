<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardBackgroundColor="#003464"
    android:layout_below="@+id/btn_ask_manifa"
    android:layout_margin="@dimen/_5sdp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relative_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="@dimen/_5sdp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/userimg"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                app:riv_corner_radius="@dimen/_10sdp"
                android:background="@drawable/img_bg"
                android:src="@drawable/ic_male"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_ask_user"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/tajawal_medium"
                android:text="Mohamed hamada"
                android:layout_toLeftOf="@+id/userimg"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:textColor="@color/purple_500" />
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:textColor="#85A9C8"
                android:text="20/10/2020"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/roboto_medium"/>
            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/txt_date"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:text="15:54:24"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginLeft="@dimen/_5sdp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/txt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/relative_user"
            app:layout_constraintRight_toRightOf="parent"
            android:text="ما السياسات المتبعه لشراء منتج من الموقع ؟"
            android:textColor="@color/white"
            android:layout_margin="@dimen/_5sdp"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/tajawal_regular"/>
        <ImageView
            android:id="@+id/bin_img"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            app:layout_constraintTop_toBottomOf="@+id/txt_message"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/bin"
            android:visibility="gone"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/bin_img"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>