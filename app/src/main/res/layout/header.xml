<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001324"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_img"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            app:riv_corner_radius="@dimen/_10sdp"
            android:background="@drawable/ic_male"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/_13ssp"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:textColor="@color/white"
            android:layout_below="@+id/user_img"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/tajawal_bold"
            android:textSize="@dimen/_14ssp"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:textColor="@color/white"
            android:layout_below="@+id/txt_user_name"
            android:layout_centerHorizontal="true"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/txt_phone"/>
        <TextView
            android:id="@+id/txt_powered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4E718F"
            android:text="powered by Alatheer Tech"
            android:layout_below="@+id/txt_eliwa"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/_12ssp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/txt_eliwa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4E718F"
            android:text="BY MHMD ELIWA"
            android:layout_below="@+id/shebinbook_img"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/_12ssp"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/shebinbook_img"
            android:layout_width="@dimen/_105sdp"
            android:layout_height="@dimen/_20sdp"
            android:background="@drawable/shebinbook"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logo"/>
        <ImageView
            android:id="@+id/logo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_below="@+id/recycler_view"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/logo"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</ScrollView>
