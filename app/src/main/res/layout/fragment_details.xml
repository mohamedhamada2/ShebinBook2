<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".products.DetailsFragment"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#003464"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp">
        <TextView
            android:id="@+id/store_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tajawal_medium"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white"
            android:text="متجر لبيع منتجات الألبان "
            android:layout_margin="@dimen/_10sdp"
            android:layout_gravity="right"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#003464"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">
            <TextView
                android:id="@+id/txt_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_medium"
                android:textSize="@dimen/_12ssp"
                android:textColor="#25C3E9"
                android:text="صفحات التواصل:"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/whats_app_img"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_toLeftOf="@+id/txt_description2"
                android:layout_centerVertical="true"
                android:background="@drawable/whatsapp"
                android:layout_marginRight="@dimen/_15sdp"/>
            <ImageView
                android:id="@+id/instagram_img"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_toLeftOf="@+id/whats_app_img"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="@drawable/instagram"/>
            <ImageView
                android:id="@+id/facebook_img"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_toLeftOf="@+id/instagram_img"
                android:layout_centerVertical="true"
                android:background="@drawable/facebook"
                android:layout_marginRight="@dimen/_15sdp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#003464"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">
            <TextView
                android:id="@+id/txt_description3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_medium"
                android:textSize="@dimen/_12ssp"
                android:textColor="#25C3E9"
                android:text="أرقام التواصل:"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txt_description3"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="@drawable/btn_bg"
                android:textColor="@color/purple_500"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/roboto_medium"
                android:text="01065242773"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#003464"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">
            <TextView
                android:id="@+id/txt_description4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_medium"
                android:textSize="@dimen/_12ssp"
                android:textColor="#25C3E9"
                android:text="مواعيد العمل:"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/store_attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txt_description4"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_15sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/tajawal_medium"
                android:text="من 9 صباحا إلي 12 مساءا"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#003464"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">
            <TextView
                android:id="@+id/txt_description5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tajawal_medium"
                android:textSize="@dimen/_12ssp"
                android:textColor="#25C3E9"
                android:text="العنوان:"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txt_description5"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_15sdp"

                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/tajawal_medium"
                android:text="الدور الأول عمارة الزهور بجوار موقف شبين"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>