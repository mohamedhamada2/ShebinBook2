<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="signupviewmodel"
            type="com.alatheer.shebinbook.authentication.signup.SignUpViewModel" />
    </data>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".authentication.signup.SignupActivity"
        android:background="@color/purple_500">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/img_frame"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_30sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/add_img_bg"
                    android:gravity="center"
                    android:onClick="chooseimage">
                    <ImageView
                        android:id="@+id/add_img"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/user" />
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/userimg"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100ssp"
                            android:scaleType="fitXY"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
            <TextView
                android:id="@+id/txt_add_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/img_frame"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="#25C3E9"
                android:fontFamily="@font/tajawal_medium"
                android:text="اضافة صورة"
                android:textSize="@dimen/_14ssp"/>
            <LinearLayout
                android:id="@+id/linear_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_add_img"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:weightSum="2"
                android:gravity="right"
                android:layout_marginTop="@dimen/_20sdp">
                <EditText
                    android:id="@+id/et_last_name"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:background="@drawable/et_login"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/tajawal_regular"
                    android:textColor="@color/purple_500"
                    android:textColorHint="@color/text_color"
                    android:hint="الاسم الاخير"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_marginRight="3dp"/>
                <EditText
                    android:id="@+id/et_first_name"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:background="@drawable/et_login"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/tajawal_regular"
                    android:textColor="@color/purple_500"
                    android:textColorHint="@color/text_color"
                    android:hint="الاسم الاول"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_marginLeft="3dp"/>
            </LinearLayout>
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linear_name"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/et_login"
                android:textColorHint="@color/text_color"
                android:textColor="@color/purple_500"
                android:textSize="@dimen/_14ssp"
                android:hint="رقم الهاتف"
                android:fontFamily="@font/tajawal_regular"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:inputType="number"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_ly"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_phone"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/et_login"
                app:passwordToggleEnabled="true"
                app:hintEnabled="false"
                app:passwordToggleTint="@color/purple_500"
                app:hintTextColor="@color/text_color">
                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:textColorHint="@color/text_color"
                    android:textColor="@color/purple_500"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/tajawal_regular"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:password="true"
                    android:inputType="textPassword"
                    android:hint="الرقم السري"
                    android:gravity="center"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/txt_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="لا يقل عن 8 أحرف و ينصح بإستخدام الأرقام والرموز لزيادة الحماية"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/tajawal_regular"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/password_ly"
                android:lineSpacingExtra="@dimen/_5sdp"/>
            <Spinner
                android:id="@+id/spinner_gender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/spinner_item"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_instruction"
                android:layout_marginTop="@dimen/_20sdp"/>
            <Spinner
                android:id="@+id/spinner_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/spinner_item"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner_gender"
                android:layout_marginTop="@dimen/_10sdp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner_city"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:paddingRight="@dimen/_12sdp"
                android:paddingLeft="@dimen/_12sdp"
                android:fontFamily="@font/tajawal_bold"
                android:textColor="@color/purple_500"
                android:textSize="@dimen/_15ssp"
                android:text="انشاء حساب" />
            <RelativeLayout
                android:id="@+id/relative_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_sign_up"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/txt_not"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    android:text="لديك حساب؟"
                    android:fontFamily="@font/tajawal_regular"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:id="@+id/txt_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#25C3E9"
                    android:textSize="@dimen/_14ssp"
                    android:text="تسجيل دخول"
                    android:fontFamily="@font/tajawal_regular"
                    android:layout_toLeftOf="@+id/txt_not"
                    android:layout_marginRight="@dimen/_10sdp" />
            </RelativeLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relative_sign_up"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
