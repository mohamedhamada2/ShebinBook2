<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="addimageviewmodel"
            type="com.alatheer.shebinbook.trader.images.addimages.AddImageViewModel" />
    </data>
    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawerlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".trader.images.addimages.AddImagesActivity">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_500">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".trader.addproduct.AddProductActivity">
                <RelativeLayout
                    android:id="@+id/relative_ly"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@color/purple_500"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:elevation="@dimen/_5sdp">
                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:src="@drawable/menu"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:onClick="showmenu"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_img"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_toLeftOf="@+id/menu"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_12sdp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/user_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:background="@drawable/img_bg"
                                android:src="@drawable/ic_baseline_person"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mohamed"
                        android:layout_toLeftOf="@id/card_img"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:fontFamily="@font/tajawal_medium"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:id="@+id/img_send"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/send"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <ImageView
                        android:id="@+id/img_search"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/search"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/img_send"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/txt_add_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relative_ly"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="@dimen/_14ssp"
                    android:fontFamily="@font/tajawal_medium"
                    android:text="إضافة ألبوم" />
                <TextView
                    android:id="@+id/et_alboum_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:background="@drawable/et_login"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_add_product"
                    android:layout_marginRight="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:text="الحد الاقصي للصور 4"
                    android:textColorHint="#AAAAAA"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/purple_500"
                    android:fontFamily="@font/tajawal_medium"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center"/>
                <LinearLayout
                    android:id="@+id/lin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_alboum_name"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:weightSum="2"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_100sdp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_add_product"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:id="@+id/linear_add"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:onClick="chooseimage">
                                <ImageView
                                    android:id="@+id/camera_img"
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:background="@drawable/product_img"/>
                            </LinearLayout>
                            <ImageView
                                android:id="@+id/product_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                android:scaleType="fitXY"/>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_100sdp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_add_product"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:id="@+id/linear_add2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:onClick="chooseimage2">
                                <ImageView
                                    android:id="@+id/camera_img2"
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:background="@drawable/product_img"/>

                            </LinearLayout>
                            <ImageView
                                android:id="@+id/product_img2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                android:scaleType="fitXY"/>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lin"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:weightSum="2"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview3"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_100sdp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_add_product"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:id="@+id/linear_add3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:onClick="chooseimage3">
                                <ImageView
                                    android:id="@+id/camera_img3"
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:background="@drawable/product_img"/>
                            </LinearLayout>
                            <ImageView
                                android:id="@+id/product_img3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                android:scaleType="fitXY"/>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview4"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_100sdp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_add_product"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:id="@+id/linear_add4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:onClick="chooseimage4">
                                <ImageView
                                    android:id="@+id/camera_img4"
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:background="@drawable/product_img"/>

                            </LinearLayout>
                            <ImageView
                                android:id="@+id/product_img4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                android:scaleType="fitXY"/>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add_alboum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lin2"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/btn_bg"
                    android:textColor="@color/purple_500"
                    android:textSize="@dimen/_14ssp"
                    android:text="إضافة"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:fontFamily="@font/tajawal_bold"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            app:headerLayout="@layout/header"
            android:theme="@style/Widget.BottomNavigationView"/>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
