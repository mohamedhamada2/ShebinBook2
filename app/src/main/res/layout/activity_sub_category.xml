<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="subcategoryviewmodel"
            type="com.alatheer.shebinbook.subcategory.SubCategoryViewModel" />
    </data>
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerlayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".subcategory.SubCategoryActivity">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swiperefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".categories.CategoryActivity"
                android:background="@color/purple_500"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/relative_ly"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@color/purple_500"
                    app:layout_constraintTop_toTopOf="parent"
                    android:elevation="@dimen/_5sdp">
                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:src="@drawable/menu"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:onClick="showmenu"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_img"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_toLeftOf="@+id/menu"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:cardCornerRadius="@dimen/_12sdp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/user_img2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:background="@drawable/img_bg"
                                android:src="@drawable/ic_male"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/card_img"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:fontFamily="@font/tajawal_medium"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:id="@+id/img_send"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/send"
                        android:layout_marginLeft="@dimen/_10sdp"/>
                    <ImageView
                        android:id="@+id/img_search"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/search"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/img_send"/>
                </RelativeLayout>
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <pl.pzienowicz.autoscrollviewpager.AutoScrollViewPager
                            android:id="@+id/viewpager2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_180sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:overScrollMode="never"
                            android:clipToPadding="false"/>
                        <TextView
                            android:id="@+id/category_name"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_38sdp"
                            android:background="@drawable/txt_category"
                            android:text="الفئات"
                            android:textSize="@dimen/_15ssp"
                            android:fontFamily="@font/tajawal_bold"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_40sdp"
                            android:paddingRight="@dimen/_40sdp"
                            android:textColor="@color/purple_500"
                            android:layout_marginTop="@dimen/_10sdp"/>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/subcategory_recycler"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"/>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            app:headerLayout="@layout/header"
            android:theme="@style/Widget.BottomNavigationView">
        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>