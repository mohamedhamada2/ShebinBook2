<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="#003464"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_7sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/relative_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="@dimen/_5sdp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/userimg"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    app:riv_corner_radius="@dimen/_10sdp"
                    android:background="@drawable/user2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_ask_user"
                    android:textSize="@dimen/_9ssp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Mohamed hamada"
                    android:layout_toLeftOf="@+id/userimg"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/purple_500"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/relative_user"
                app:layout_constraintRight_toRightOf="parent"
                android:text="ما السياسات المتبعه لشراء منتج من الموقع ؟"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/tajawal_regular"/>
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/comment_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                app:riv_corner_radius="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/txt_comment"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="@dimen/_10sdp"/>
            <ImageView
                android:id="@+id/fav_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/comment_img"
                android:src="@drawable/fav"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/fav_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:text="12"
                app:layout_constraintLeft_toRightOf="@+id/fav_img"
                app:layout_constraintTop_toBottomOf="@+id/comment_img"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"/>
            <ImageView
                android:id="@+id/reply_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintLeft_toRightOf="@+id/fav_num"
                app:layout_constraintTop_toBottomOf="@+id/comment_img"
                android:src="@drawable/message"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/msg_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:text="20"
                app:layout_constraintLeft_toRightOf="@+id/reply_img"
                app:layout_constraintTop_toBottomOf="@+id/comment_img"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@+id/fav_img"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/img_node"
        android:layout_width="@dimen/_7sdp"
        android:layout_height="@dimen/_7sdp"
        android:background="@drawable/circle"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_40sdp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/replies_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cardview"/>
</androidx.constraintlayout.widget.ConstraintLayout>